<body>

    <header>
        <h1>Simple E-commerce Store</h1>
    </header>

    <div class="container">
        <div class="product" id="product1">
            <img src="https://via.placeholder.com/300x200?text=Laptop" alt="Laptop">
            <h3>Laptop</h3>
            <p>$999.99</p>
            <button onclick="addToCart('Laptop', 999.99)">Add to Cart</button>
        </div>

        <div class="product" id="product2">
            <img src="https://via.placeholder.com/300x200?text=Smartphone" alt="Smartphone">
            <h3>Smartphone</h3>
            <p>$499.99</p>
            <button onclick="addToCart('Smartphone', 499.99)">Add to Cart</button>
        </div>

        <div class="product" id="product3">
            <img src="https://via.placeholder.com/300x200?text=Headphones" alt="Headphones">
            <h3>Headphones</h3>
            <p>$89.99</p>
            <button onclick="addToCart('Headphones', 89.99)">Add to Cart</button>
        </div>
    </div>

    <div class="cart" id="cart">
        <h3>Shopping Cart</h3>
        <p id="cart-items"></p>
        <p>Total: $<span id="total-price">0.00</span></p>
        <button onclick="checkout()">Checkout</button>
    </div>

    <script>
        let cartItems = [];
        let totalPrice = 0;

        function addToCart(productName, productPrice) {
            cartItems.push({ name: productName, price: productPrice });
            totalPrice += productPrice;
            updateCart();
        }

        function updateCart() {
            const cart = document.getElementById('cart');
            const cartItemsText = cartItems.map(item => `${item.name} - $${item.price.toFixed(2)}`).join('<br>');
            const totalPriceText = totalPrice.toFixed(2);

            document.getElementById('cart-items').innerHTML = cartItemsText;
            document.getElementById('total-price').innerText = totalPriceText;

            cart.style.display = cartItems.length > 0 ? 'flex' : 'none';
        }

        function checkout() {
            if (cartItems.length === 0) {
                alert("Your cart is empty. Please add items before checking out.");
            } else {
                alert(`Checkout successful! Total price: $${totalPrice.toFixed(2)}`);
                cartItems = [];
                totalPrice = 0;
                updateCart();
            }
        }
    </script>

</body>
